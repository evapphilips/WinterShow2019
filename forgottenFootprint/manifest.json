{
    "manifest_version": 2,
    "name": "Chrome Extension: Online Footprint",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": ["style.css"],
            "js": ["d3.min.js", "content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}